<%- include('partials/adminheader') -%>
<%- include('partials/sidebar') -%>
        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>Product List
                                    <small>Multikart Admin panel</small>
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">Physical</li>
                                <li class="breadcrumb-item active">Product List</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row products-admin ratio_asos">
                    <% products.forEach(function(product) {  %>
                     <div class="col-xl-3 col-sm-6">
                        <div class="card">
                            <div class="card-body product-box">
                                <div class="img-wrapper">
                                    <div class="front">
                                       <a href="#"><img src="../assets/images/products/<%= product.Image %>" class="img-fluid blur-up lazyload bg-img" alt=""></a>
                                        <div class="product-hover">
                                            <ul>
                                                <li>
                                                    <form action="/admin/product/<%= product._id %>?_method=DELETE" method="POST" style="display: inline;">
                                                        <button name="dell" onclick="return confirm('Are you sure you want to delete this item?');" href="" class="btn" type="submit" >
                                                            <i class="far fa-trash-alt"></i>
                                                        </button> 
                                                    </form>
                                                 </li>
                                                <li>
                                                    <a href="/admin/product/<%= product._id %>/edit" class="btn" type="button" >
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                </li>
                                                  
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-detail">
                                    
                                    <a href="#">
                                        <h6><%= product.title %></h6>
                                    </a>
                                    <h4><%= product.price %></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
            <!-- Container-fluid Ends-->

        </div>
<%- include('partials/adminfooter') -%>